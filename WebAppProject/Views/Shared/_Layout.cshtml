<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    
    <link href="~/styles/bootstrap.css" rel="stylesheet" />
    <link href="~/styles/StyleSheet.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>

</head>
<body>
    <div id="layout-content">
        <div class="Maintitle">
            <h1>
                Pet Shop - Your Pet's Paradise!
            </h1>
        </div>

        <div id="Upper_navbar" class="text-center">
            @if (@User.Identity!.IsAuthenticated)
            {
                @if (User.IsInRole("Admin") || User.IsInRole("Management"))
                {
                    <a class="btn btn-secondary" asp-action="UsersList" asp-controller="Account">Users</a>
                }

                <a class="btn btn-secondary" asp-action="Logout" asp-controller="Account">Logout from <span style="color: red;"><strong>@User.Identity!.Name</strong></span></a>
            }
            else
            {
                <a class="btn btn-secondary" asp-action="Login" asp-controller="Account">Login</a>
            }
        </div>


        <div class="navbar">
            <div class="all">
                <a asp-action="CatalogPage" asp-controller="Catalog" class="lefter">
                    <div class="text">Catalog</div>
                </a>
                <a asp-action="AdminPage" asp-controller="Admin" class="left">
                    <div class="text">Admin</div>
                </a> 

                <div class="middle">
                    <a asp-action="HomePage" asp-controller="Home">
                        <div class="explainer"><span>Menu</span></div>
                        <div class="text">Home</div>
                    </a>
                </div>

                <a href="https://www.linkedin.com/in/idan~tal/" target="_blank" class="right">
                    <div class="text">LinkedIn</div>
                </a>
                <a href="https://github.com/idanNtal" target="_blank" class="righter">
                    <div class="text">GitHub</div>
                </a>
            </div>
        </div>
    </div>

    <div class="FullLine"></div>

    <div class="main-content">
        @RenderBody()
    </div>

    <div id="CreateBy" class="center-text">Created By Idan Tal</div>

    @await RenderSectionAsync("Scripts", false)
</body>
</html>

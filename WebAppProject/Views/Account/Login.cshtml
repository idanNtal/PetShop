@model WebAppProject.Models.LoginModel

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<div class="Get_inTheMiddle text-center">
    <form method="post" asp-action="Login">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Username">Username</label>
                        <input asp-for="Username" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">Password</label>
                        <input asp-for="Password" type="password" class="form-control" />
                    </div>
                    <div class="form-group text-center">
                        <input class="btn btn-outline-success" type="submit" value="Login" />
                        <a class="btn btn-outline-warning" asp-action="Register" asp-controller="Account">Registration</a>
                    </div>
                </div>
            </div>
        </div>
    </form>


</div>
@model WebAppProject.Models.RegisterModel

@{
    ViewBag.Title = "Register";
}

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.17.0/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}

<h2>Register</h2>


<div class="Get_inTheMiddle text-center">
    <form method="post" asp-action="Register">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="form-group text-center">
                        <label asp-for="Username">Username</label>
                        <input asp-for="Username" type="text" class="form-control" />
                        <span class="error" asp-validation-for="Username"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">Password</label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span class="error" asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword">Confirm Password</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" />
                        <span class="error" asp-validation-for="ConfirmPassword"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email">Email</label>
                        <input asp-for="Email" type="email" class="form-control" />
                        <span class="error" asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group text-center">
                        <input class="btn btn-outline-warning" type="submit" value="Register" />
                    </div>
                </div>
            </div>
        </div>
    </form>

</div>
